# Azure OpenAI Configuration Example
# Copy this to your .env and fill in your values

# RAG API Configuration
RAG_API_KEY=your_rag_api_key
RAG_API_URL=https://your-rag-url.com
RAG_API_EMAIL=your-email@example.com
CACHE_RAG=true

# Langfuse Configuration (required)
LANGFUSE_SECRET_KEY="your-langfuse-secret-key"
LANGFUSE_PUBLIC_KEY="your-langfuse-public-key"
LANGFUSE_BASE_URL="https://cloud.langfuse.com"

# Evaluation LLM Provider
EVAL_LLM_PROVIDER=azure_openai

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini  # Your deployment name
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_BASE_URL=https://your-resource.openai.azure.com/
AZURE_OPENAI_TEMPERATURE=0.0

# Model name (used as reference, actual deployment comes from DEPLOYMENT_NAME)
EVAL_OLLAMA_MODEL=gpt-4o-mini

# Note: For Ollama, use EVAL_LLM_PROVIDER=ollama and set EVAL_OLLAMA_BASE_URL
# Note: For OpenAI, use EVAL_LLM_PROVIDER=openai and set OPENAI_API_KEY
